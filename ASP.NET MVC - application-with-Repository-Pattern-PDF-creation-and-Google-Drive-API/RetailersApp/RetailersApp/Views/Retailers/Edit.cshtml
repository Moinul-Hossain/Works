@model RetailersApp.Models.Retailer

@{
    ViewBag.Title = "Edit Retailer";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Retailers", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Retailer</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.Hidden("Retailer_ID", Model.Retailer_ID)
    @Html.Hidden("image_url", Model.image_url)

    <div class="form-group">
        <label class="control-label col-md-2">Retailer Code</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Retailer_Code, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Retailer_Code, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Retailer Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Retailer_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Retailer_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Location</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Retailer_Location, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Retailer_Location, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Image</label>
        <div class="col-md-10">
            @{
                string img = "";
                if (Model.image_url != null)
                { img = Model.image_url.ToString(); }
                else
                { img = "image-not-available.jpg"; }
            }
            <img src="~/Images/@img" height="150" width="150" id="imG" /><br/><br/>
            <input type="file" name="ImageFile" id="imgUploader" onchange="readURL(this);" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imG')
                    .attr('src', e.target.result)
                    .width(150)
                    .height(150);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
