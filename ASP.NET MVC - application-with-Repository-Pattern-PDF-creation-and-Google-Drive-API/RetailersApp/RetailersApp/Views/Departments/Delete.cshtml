@model RetailersApp.DTO.DepartmentDto

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Department Name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department_Name)
        </dd>

        <dt>
            <b>Department Code</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department_Code)
        </dd>

        <dt>
            <b>Retailer Name</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Retailer.Retailer_Name)
        </dd>





        <dt>
            <b>Image</b>
        </dt>

        <dd>
            @{
                string img = "";
                if (Model.image_url != null)
                { img = Model.image_url.ToString(); }
                else
                { img = "image-not-available.jpg"; }
            }
            <img src="~/Images/@img" height="150" width="150" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
